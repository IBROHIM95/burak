{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*" : ["node_modules/*"]
        }

    },
    "include": ["src/**/*.ts", "src/train.js"],
    "exclude": ["node_modules"]
}